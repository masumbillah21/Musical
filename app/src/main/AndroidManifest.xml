<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.masum_billah.musical">

    <application
        android:allowBackup="true"
        android:icon="@drawable/musical_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/musical_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MusicDetails">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MelodyActivity"
                />
        </activity>
        <activity
            android:name=".HipHopActivity"
            android:label="@string/hiphop_music">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".RockActivity"
            android:label="@string/rock_music">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".MelodyActivity"
            android:label="@string/melody_music">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".MainActivity"
            android:theme="@style/NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>